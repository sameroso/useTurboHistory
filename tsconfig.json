{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["DOM", "ESNext", "dom.iterable"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src", "playground"],
  "exclude": ["node_modules", "lib"]
}
